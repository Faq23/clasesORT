@{
    var TipoUsuario = Context.Session.GetString("TipoUsuario");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestión - Obligatorio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Obligatorio.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @if (TipoUsuario != null)
        {
            <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-4">
                <div class="container-fluid">
                    <!-- Brand -->
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="@TipoUsuario" asp-action="Index">
                        💼 Gestión
                    </a>

                    <!-- Botón responsive -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Links -->
                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            @if (TipoUsuario == "Administrador" && TipoUsuario != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="TipoGasto" asp-action="Index">
                                        🧾 Gestión de Tipos de Gasto
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="Index">
                                        💰 Registrar Pago
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">
                                        👤 Administración de Usuarios
                                    </a>
                                </li>
                            }

                            @if (TipoUsuario == "Gerente" && TipoUsuario != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="Index">
                                        💰 Registrar Pago
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="ObtenerConSaldo">
                                        📋 Listado de Pagos con Saldo
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">
                                        👥 Alta de Usuario
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="MostrarPorMonto">
                                        💵 Usuarios por Monto
                                    </a>
                                </li>
                            }

                            @if (TipoUsuario == "Empleado" && TipoUsuario != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="Index">
                                        💰 Registrar Pago
                                    </a>
                                </li>
                            }
                        </ul>

                        <!-- Logout -->
                        @if (TipoUsuario != null)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-semibold" href="@Url.Action("Logout", "Home")">
                                        🚪 Cerrar Sesión
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>

        }
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Obligatorio.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
