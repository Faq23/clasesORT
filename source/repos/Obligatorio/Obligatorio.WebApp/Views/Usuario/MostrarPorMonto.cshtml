@using Obligatorio.LogicaAplicacion.dtos.Usuarios
@model IEnumerable<UsuarioDTOListadoConMonto>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Usuarios por Monto</h1>
        <p class="text-muted">Ingresá un monto para listar los usuarios que superan ese valor.</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Filtrar por monto</h5>
        </div>
        <div class="card-body">
            <form asp-action="MostrarPorMonto" asp-controller="Usuario" method="post" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Monto mínimo</label>
                    <input type="number" name="monto" class="form-control" placeholder="Ingrese el monto..." required />
                </div>
                <div class="col-md-6 text-end">
                    <button type="submit" class="btn btn-success px-4">Buscar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Resultados -->
    @if (Model != null)
    {
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Usuarios encontrados</h2>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered text-center align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Equipo</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UsuarioDTOListadoConMonto item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Apellido</td>
                                <td>@item.Email</td>
                                <td>@item.Equipo.Nombre</td>
                                <td>@item.Monto</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Mensajes -->
    @{
        if (!string.IsNullOrEmpty(ViewBag.msg) || TempData["msg"] != null)
        {
            var tipo = string.IsNullOrEmpty(ViewBag.msgType) && TempData["msgType"] == null ? "alert-danger" : "alert-success";
            <div id="alertModal" class="alert @tipo alert-dismissible fade show position-fixed bottom-0 end-0 m-4 shadow" role="alert" style="z-index: 1050;">
                <p class="m-0">@ViewBag.msg@TempData["msg"]</p>
            </div>
        }
    }
</div>
