@using Obligatorio.LogicaAplicacion.dtos.Pagos
@{
    IEnumerable<PagoRecurrenteDTOListadoConSaldo> recurrenteListado = ViewData["PagosRecurrentes"] as IEnumerable<PagoRecurrenteDTOListadoConSaldo>;
    IEnumerable<PagoUnicoDTOListadoConSaldo> unicoListado = ViewData["PagosUnicos"] as IEnumerable<PagoUnicoDTOListadoConSaldo>;
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Consultar Pagos con Saldo</h1>
        <p class="text-muted">Seleccioná un mes y año para filtrar los pagos correspondientes.</p>
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Seleccionar período</h5>
        </div>
        <div class="card-body">
            <form asp-action="ObtenerConSaldo" asp-controller="Pago" method="post" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Mes y Año</label>
                    <input type="month" name="fecha" class="form-control" required />
                </div>
                <div class="col-md-6 text-end">
                    <button type="submit" class="btn btn-success px-4">Buscar</button>
                </div>
            </form>
        </div>
    </div>

    @if (recurrenteListado != null && unicoListado != null)
    {
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Pagos Obtenidos</h2>
        </div>

        <div class="row g-4">
            <!-- Pagos Recurrentes -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        Pagos Recurrentes
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover text-center align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Descripción</th>
                                    <th>Monto</th>
                                    <th>Método</th>
                                    <th>Usuario</th>
                                    <th>Tipo Gasto</th>
                                    <th>Inicio</th>
                                    <th>Fin</th>
                                    <th>Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (PagoRecurrenteDTOListadoConSaldo item in recurrenteListado)
                                {
                                    <tr>
                                        <td>@item.Descripcion</td>
                                        <td>@item.Monto</td>
                                        <td>@item.MetodoPago</td>
                                        <td>@item.Usuario.Email</td>
                                        <td>@item.TipoGastoAsociado.Nombre</td>
                                        <td>@item.FechaInicio.ToShortDateString()</td>
                                        <td>@item.FechaFin.ToShortDateString()</td>
                                        <td>@item.SaldoPendiente</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagos Únicos -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        Pagos Únicos
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover text-center align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Descripción</th>
                                    <th>Monto</th>
                                    <th>Método</th>
                                    <th>Usuario</th>
                                    <th>Tipo Gasto</th>
                                    <th>Pago</th>
                                    <th>Recibo</th>
                                    <th>Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (PagoUnicoDTOListadoConSaldo item in unicoListado)
                                {
                                    <tr>
                                        <td>@item.Descripcion</td>
                                        <td>@item.Monto</td>
                                        <td>@item.MetodoPago</td>
                                        <td>@item.Usuario.Email</td>
                                        <td>@item.TipoGastoAsociado.Nombre</td>
                                        <td>@item.FechaPago.ToShortDateString()</td>
                                        <td>@item.NumeroRecibo</td>
                                        <td>@item.SaldoPendiente</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Mensajes -->
    @{
        if (!string.IsNullOrEmpty(ViewBag.msg) || TempData["msg"] != null)
        {
            var tipo = string.IsNullOrEmpty(ViewBag.msgType) && TempData["msgType"] == null ? "alert-danger" : "alert-success";
            <div id="alertModal" class="alert @tipo alert-dismissible fade show position-fixed bottom-0 end-0 m-4 shadow" role="alert" style="z-index: 1050;">
                <p class="m-0">@ViewBag.msg@TempData["msg"]</p>
            </div>
        }
    }
</div>
