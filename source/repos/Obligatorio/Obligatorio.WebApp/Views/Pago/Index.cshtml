@using Obligatorio.LogicaAplicacion.dtos.Pagos
@using Obligatorio.LogicaAplicacion.dtos.TiposGasto
@{
    IEnumerable<PagoRecurrenteDTOListado> recurrenteListado = ViewData["PagosRecurrentes"] as IEnumerable<PagoRecurrenteDTOListado>;
    IEnumerable<PagoUnicoDTOListado> unicoListado = ViewData["PagosUnicos"] as IEnumerable<PagoUnicoDTOListado>;
    IEnumerable<TipoGastoDTOListado> tiposGasto = ViewData["TiposGasto"] as IEnumerable<TipoGastoDTOListado>;
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Gestión de Pagos</h1>
        <p class="text-muted">Agregá un nuevo pago y visualizá los registros existentes.</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Agregar nuevo pago</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Pago" id="formPago" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Tipo de Pago</label>
                        <select id="tipoPago" class="form-select">
                            <option selected disabled value="">-- Seleccione una Opción --</option>
                            <option value="Recurrente">Recurrente</option>
                            <option value="Unico">Único</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Descripción</label>
                        <input type="text" name="descripcion" class="form-control" placeholder="Descripción..." />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Monto</label>
                        <input type="number" name="monto" class="form-control" placeholder="Monto..." />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Método de Pago</label>
                        <select name="metodoPago" class="form-select">
                            <option selected disabled value="">-- Seleccione una Opción --</option>
                            <option value="Efectivo">Efectivo</option>
                            <option value="Credito">Crédito</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Tipo de Gasto</label>
                        <select name="idTipoGasto" class="form-select">
                            <option selected disabled value="">-- Seleccione una Opción --</option>
                            @foreach (TipoGastoDTOListado item in tiposGasto)
                            {
                                <option value="@item.ID">@item.Nombre</option>
                            }
                        </select>
                    </div>

                    <div id="camposDinamicos" class="col-12"></div>

                    <div class="col-12 text-end mt-3">
                        <button type="submit" class="btn btn-success px-4">Agregar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Listados -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Pagos Cargados</h2>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">Pagos Recurrentes</div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-center align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Descripción</th>
                                <th>Monto</th>
                                <th>Método</th>
                                <th>Usuario</th>
                                <th>Tipo Gasto</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (PagoRecurrenteDTOListado item in recurrenteListado)
                            {
                                <tr>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Monto</td>
                                    <td>@item.MetodoPago</td>
                                    <td>@item.Usuario.Email</td>
                                    <td>@item.TipoGastoAsociado.Nombre</td>
                                    <td>@item.FechaInicio.ToShortDateString()</td>
                                    <td>@item.FechaFin.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">Pagos Únicos</div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-center align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Descripción</th>
                                <th>Monto</th>
                                <th>Método</th>
                                <th>Usuario</th>
                                <th>Tipo Gasto</th>
                                <th>Fecha Pago</th>
                                <th>Número Recibo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (PagoUnicoDTOListado item in unicoListado)
                            {
                                <tr>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Monto</td>
                                    <td>@item.MetodoPago</td>
                                    <td>@item.Usuario.Email</td>
                                    <td>@item.TipoGastoAsociado.Nombre</td>
                                    <td>@item.FechaPago.ToShortDateString()</td>
                                    <td>@item.NumeroRecibo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @{
        if (!string.IsNullOrEmpty(ViewBag.msg) || TempData["msg"] != null)
        {
            var tipo = string.IsNullOrEmpty(ViewBag.msgType) && TempData["msgType"] == null ? "alert-danger" : "alert-success";
            <div id="alertModal" class="alert @tipo alert-dismissible fade show position-fixed bottom-0 end-0 m-4 shadow" role="alert" style="z-index: 1050;">
                <p class="m-0">@ViewBag.msg@TempData["msg"]</p>
            </div>
        }
    }
</div>
